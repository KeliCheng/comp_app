<% provide(:title, "Rename Computer") %>
<center><h1>Rename Your Computer</h1></center>

<div class="row center jumbotron">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(@computer) do |f| %> 
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
				<br>

				<div class="col-md-6 col-md-offset-3">
			<%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>
				</div>
		<% end %>
	</div>
</div>

<p><center>Once you're done renaming your computer, click <%= link_to "here", static_pages_home_path %> to return to your home page.</center></p>