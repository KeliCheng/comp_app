<% provide(:title, 'CPU') %>
<center><h1>CPU</h1></center>
<center><p>-Central Processing Unit-</p></center>
<center><p>The hardware within a computer that carries out the instructions of a computer program.</p></center>
<center><p> It performs the basic arithmetical, logical, control and input/output operations of the system.</p></center>
<ul class="breadcrumb">
  <li><%= link_to "Home", static_pages_home_path%></li>
  <li><%= link_to "Blacklist", blacklist_pages_blacklist_path(current_user)%></li>
  <li class="active">CPU Blacklist</li>
</ul>
<center>
  <table style="width:100%">
     <table class="table", style="width:80%;float:right;vertical-align:top">
      <tr class="active">
        <th></th>
        <th><center>ID</center></th>
        <th><center>Creator</center></th>
        <th><center>Name</center></th>
        <th><center>Type</center></th>
        <th><center>Cores</center></th>
        <th><center>Speed</center></th>
        <th><center>Watts</center></th>
        <th><center>Price</center></th>
      </tr>
</center>

  <%= form_for(@blacklist) do |cpubl_form| %>

    <% @cpu.drop(1).each do |f| %>
    <tr>
          <td><%= cpubl_form.radio_button :cpu_id, value = @blacklist.cpu_id + f.id.to_s + ','%></td>
          <td><%= f.id %></td>
          <% if f.creator != 0 %>
            <td><%= User.find_by(id: f.creator).name %></td>
          <% else %>
            <td>System</td>
          <% end %>
          <td><%= f.name %></td>
          <td><%= f.mb_compad %></td>
          <td><%= f.cores %></td>
          <td><%= f.speed %> GHz</td>
          <td><%= f.watts %> Watts</td>
          <td>$<%= f.price %></td>
        </tr>
      <% end %>
  </table>
</table>
  <%= cpubl_form.submit "Blacklist", class: "btn btn-primary btn-lg btn-success" %>
  <%end%>