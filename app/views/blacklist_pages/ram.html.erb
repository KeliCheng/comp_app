<% provide(:title, 'RAM') %>
<center><h1>RAM</h1></center>
<center><p>-Random-Access Memory-</p></center>
<center><p> A form of computer data storage. </p></center>
<center><p> It allows data items to be read and written in roughly the same amount of time regardless of the order in which data items are accessed.</p></center>
<ul class="breadcrumb">
  <li><%= link_to "Home", static_pages_home_path%></li>
  <li><%= link_to "Blacklist", blacklist_pages_blacklist_path(current_user)%></li>
  <li class="active">RAM Blacklist</li>
</ul>
<center>
  <table style="width:100%">
     <table class="table", style="width:80%;float:right;vertical-align:top">
      <tr class="active">
        <th></th>
        <th><center>ID</center></th>
        <th><center>Creator</center></th>
        <th><center>Name</center></th>
        <th><center>Type</center></th>
        <th><center>Size</center></th>
        <th><center>Watts</center></th>
        <th><center>Price</center></th>
      </tr>
</center>

  <%= form_for(@blacklist) do |rambl_form| %>

    <% @ram.drop(1).each do |f| %>
    <tr>
          <td><%= rambl_form.radio_button :ram_id, value = @blacklist.ram_id + f.id.to_s + ','%></td>
          <td><%= f.id %></td>
          <% if f.creator != 0 %>
            <td><%= User.find_by(id: f.creator).name %></td>
          <% else %>
            <td>System</td>
          <% end %>
          <td><%= f.name %></td>
          <td><%= f.mb_compad %></td>
          <td><%= f.size %> GB</td>
          <td><%= f.watts %> Watts</td>
          <td>$<%= f.price %></td>
        </tr>
      <% end %>
  </table>
</table>
  <%= rambl_form.submit "Blacklist", class: "btn btn-primary btn-lg btn-success" %>
  <%end%>