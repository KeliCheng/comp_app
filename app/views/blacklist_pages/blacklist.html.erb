              <td><%= f.mb_compad %></td>
              <td><%= f.size %></td>
              <td><%= f.watts %></td>
              <td><%= f.price %></td>
              <td class="btn btn-primary btn-xs"><%= link_to "Delete", blacklists_delete_hd_path(:hdid => f.id) %></td>
            </tr>
          <% end %>
        </table>

        <center><h5>Power Supplies</h5></center>
        <table class="table", style="width:80%;vertical-align:top">
          <tr class="active">
            <th><center>Name</center></th>
            <th><center>Watts</center></th>
            <th><center>Price</center></th>
          </tr>
          <% @power.drop(1).each do |f| %>
