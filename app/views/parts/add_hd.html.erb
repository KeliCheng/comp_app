<% provide(:title, 'Add A HD') %>

<center><h1>Add A HD</h1></center>
<center><%= image_tag("hd.png") %></center>
<center><p>-Hard Disk Drive-</p></center>
<center><p>A data storage device used for storing and retrieving digital information using rapidly rotating disks coated with magnetic material.</p></center>

<div class="row center jumbotron" >
  <div class="col-md-4 col-md-offset-4">

		<%= form_for :hd do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control',:placeholder => "Name" %>

		<%= f.label :price , "Price ($)" %>
		<%= f.number_field :price, class: 'form-control',:placeholder => "$ 0" %>

		<%= f.label :size, "Size (GB)" %>
		<%= f.number_field :size, class: 'form-control',:placeholder => "0 GB" %>

		<%= f.label :mb_compad, "Motherboard Compatability" %>
		<%= f.radio_button :mb_compad, "SATA 6.0 Gb/s", class: 'form-control' %>	<center><%= label_tag :mb_compad_SATA_6, "SATA 6.0 Gb/s" %></center>
		<%= f.radio_button :mb_compad, "SATA 3.0 Gb/s", class: 'form-control' %>	<center><%= label_tag :mb_compad_SATA_3, "SATA 3.0 Gb/s" %></center>
		<%= f.radio_button :mb_compad, "SAS 6.0 Gb/s", class: 'form-control' %>	<center><%= label_tag :mb_compad_SAS_6, "SAS 6.0 Gb/s" %></center>

		<%= f.label :watts %>
		<%= f.number_field :watts, class: 'form-control',:placeholder => "0" %>

		<br/>
		<br/>
		<center>
				<%= f.submit "Create HD", class: "btn btn-lg btn-success" %>
				<a>&nbsp&nbsp&nbsp&nbsp&nbsp</a>
				<%= link_to parts_add_path, class: "btn btn-lg btn-danger" do %> Cancel
				<% end %>
		</center>
    <% end %>
  </div>
</div>