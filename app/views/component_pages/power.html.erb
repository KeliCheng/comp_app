<% provide(:title, 'Power Supply') %>
<center><h1>Power Supply</h1></center>
<center>
  <table style="width:100%">
    <table style="width:20%;float:right;vertical-align:top">
      <tr>
        <th><div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Total price</h3>
  </div>
  <div class="panel-body">
    <h2>$<%= @computer.price %></h2>
  </div>
</div></th>
      </tr>
    </table>

     <table class="table", style="width:80%;float:right;vertical-align:top">
      <tr class="active">
        <th></th>
        <th><center>ID</center></th>
        <th><center>Voltage</center></th>
        <th><center>Price</center></th>
      </tr>

<%=form_for(@computer) do |power_form|%>
      <% @power.each do |f| %>
        <tr>
          <td><%=power_form.radio_button :power_id, value = f.id%></td>
          <td><%= f.id %></td>
          <td><%= f.voltage %> V</td>
          <td>$<%= f.price %></td>
        </tr>
      <% end %>
    </table>
  </table>
    <%=power_form.submit "Save", class: "btn btn-primary btn-lg btn-success" %>
  <%end%>
  </center>

  <div align="right">
  <%= link_to "Next", computers_summary_path,
                                class: "btn btn-large btn-primary" %>
  </div>
